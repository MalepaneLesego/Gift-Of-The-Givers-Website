@model IEnumerable<FoundationWebApp.Models.Assignment>

@{
    ViewData["Title"] = "Assignments Dashboard";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Assignments Dashboard</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-2"></i> Create New Assignment
        </a>
    </div>

    <!-- Assignment Cards -->
    <div class="row g-4">
        @foreach (var assignment in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="card shadow-sm h-100 border-0 assignment-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@assignment.Role</h5>
                        <p class="card-subtitle mb-2 text-muted">Assigned: @assignment.AssignedDate.ToShortDateString()</p>

                        <div class="mb-3">
                            <p class="mb-1"><strong>Status:</strong> @assignment.Status</p>
                            <p class="mb-1"><strong>Volunteer:</strong> @assignment.Volunteer.FirstName</p>
                            <p class="mb-1"><strong>Disaster:</strong> @assignment.Disaster.Name</p>
                        </div>

                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@assignment.Assignment_ID" class="btn btn-outline-primary btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@assignment.Assignment_ID" class="btn btn-outline-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@assignment.Assignment_ID" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .assignment-card {
        border-radius: 12px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .assignment-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    .card-title {
        font-size: 1.2rem;
    }

    .card-subtitle {
        font-size: 0.95rem;
    }




</style>
