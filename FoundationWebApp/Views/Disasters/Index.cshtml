@model IEnumerable<FoundationWebApp.Models.Disaster>

@{
    ViewData["Title"] = "Disasters Dashboard";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Disasters Dashboard</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-2"></i> Create New Disaster
        </a>
    </div>

    <!-- Disaster Cards -->
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="card shadow-sm h-100 border-0 disaster-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="card-subtitle mb-2 text-muted">@item.Location</p>

                        <div class="mb-3">
                            <p class="mb-1"><strong>Start:</strong> @item.StartDate.ToShortDateString()</p>
                            <p class="mb-1"><strong>End:</strong> @item.EndDate?.ToShortDateString()</p>
                            <p class="mb-1">
                                <strong>Status:</strong>
                                <span class="badge @(string.Equals(item.Status?.Trim(), "Active", StringComparison.OrdinalIgnoreCase) ? "bg-danger" : "bg-secondary")">
                                    @(string.IsNullOrWhiteSpace(item.Status) ? "Unknown" : item.Status)
                                </span>
                            </p>
                            <p class="mb-1"><strong>Description:</strong> @item.Description</p>
                        </div>

                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.Disaster_ID" class="btn btn-outline-primary btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Disaster_ID" class="btn btn-outline-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Disaster_ID" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .disaster-card {
        border-radius: 12px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .disaster-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    .card-title {
        font-size: 1.2rem;
    }

    .card-subtitle {
        font-size: 0.95rem;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.35em 0.75em;
        border-radius: 0.5rem;
    }


</style>
