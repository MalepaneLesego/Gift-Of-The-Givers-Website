@model FoundationWebApp.Models.Volunteer

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4" style="max-width: 700px; width: 100%;">
        <h2 class="text-center mb-4">Delete Volunteer</h2>
        <h5 class="text-center text-muted mb-3">Are you sure you want to delete this?</h5>

        <hr />

        <dl class="row">
            <dt class="col-sm-4">First Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

            <dt class="col-sm-4">Last Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-4">Phone</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

            <dt class="col-sm-4">Skills</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Skills)</dd>

            <dt class="col-sm-4">Location</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Location)</dd>

            <dt class="col-sm-4">Availability Status</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.AvailabilityStatus)</dd>

            <dt class="col-sm-4">User</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Email)</dd>
        </dl>

        <div class="text-center mt-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Volunteer_ID" />
                <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Back to List</a>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
    }

    dl dt {
        font-weight: 600;
        color: #555;
    }

    dl dd {
        margin-bottom: 0.75rem;
    }

    .btn-lg {
        min-width: 120px;
    }
</style>
