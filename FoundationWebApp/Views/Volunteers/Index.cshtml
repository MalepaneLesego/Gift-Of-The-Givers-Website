@model IEnumerable<FoundationWebApp.Models.Volunteer>

@{
    ViewData["Title"] = "Volunteer Dashboard";
}

<div class="container py-5">
    <!-- Dashboard Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold">Volunteer Dashboard</h1>
            <p class="text-muted">Manage all volunteer accounts you have created over time.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>New Volunteer Account
        </a>
    </div>

    <!-- Volunteer Cards -->
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card shadow-sm h-100 border-0 volunteer-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@item.FirstName @item.LastName</h5>
                        <p class="card-subtitle mb-2 text-muted">@item.Email</p>

                        <div class="mt-3">
                            <p class="mb-1"><strong>Phone:</strong> @item.Phone</p>
                            <p class="mb-1"><strong>Skills:</strong> @item.Skills</p>
                            <p class="mb-1"><strong>Location:</strong> @item.Location</p>
                            <p class="mb-1">
                                <strong>Status:</strong>

                            </p>
                            <p class="mb-1"><strong>User:</strong> @item.User?.Email</p>
                        </div>

                        <div class="mt-auto pt-3 d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.Volunteer_ID" class="btn btn-outline-primary btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Volunteer_ID" class="btn btn-outline-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Volunteer_ID" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Custom Styles -->
<style>
    .volunteer-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 12px;
    }

        .volunteer-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    .card-title {
        font-size: 1.1rem;
    }

    .badge {
        font-size: 0.85rem;
    }
</style>
