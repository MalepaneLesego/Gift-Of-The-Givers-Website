@model FoundationWebApp.Models.Donation

@{
    ViewData["Title"] = "Create Donation";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg rounded-3 p-4" style="max-width: 900px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-4 fw-bold">Create Donation</h2>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="DonorName" class="form-control" placeholder="Donor Name" />
                            <label asp-for="DonorName">Donor Name</label>
                            <span asp-validation-for="DonorName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="Amount" />
                            <label asp-for="Amount">Amount</label>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="DonationDate" type="date" class="form-control" placeholder="Donation Date" />
                            <label asp-for="DonationDate">Donation Date</label>
                            <span asp-validation-for="DonationDate" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="Disaster_ID" class="form-select" asp-items="ViewBag.Disaster_ID" placeholder="Select Disaster"></select>
                            <label asp-for="Disaster_ID">Disaster</label>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-4 me-2">Create</button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
