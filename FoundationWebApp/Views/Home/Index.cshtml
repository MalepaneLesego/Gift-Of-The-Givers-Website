@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex justify-content-center align-items-start min-vh-100 py-5">
        <div class="services-wrapper w-100" style="max-width: 1200px;">
            <h2 class="text-center mb-4">App Services</h2>
            <div class="services-container">
                <div class="service-card text-center">
                    <h3>Volunteer</h3>
                    <p>Join our community and contribute your time to make an impact.</p>
                    <a asp-action="Index" asp-controller="Volunteers" class="btn btn-dark">Get Started</a>
                </div>

                <div class="service-card text-center">
                    <h3>Donate</h3>
                    <p>Support our mission by making a contribution to those in need.</p>
                    <a asp-action="Index" asp-controller="Donations" class="btn btn-dark">Donate Now</a>
                </div>

                <div class="service-card text-center">
                    <h3>Create Alert</h3>
                    <p>Help spread awareness by creating alerts for urgent causes.</p>
                    <a asp-controller="Disasters" asp-action="Index" class="btn btn-dark">Create Alert</a>
                </div>

                <div class="service-card text-center">
                    <h3>Create Relief Project</h3>
                    <p>Start your own initiative and collaborate with others.</p>
                    <a asp-action="Index" asp-controller="Assignments" class="btn btn-dark">Launch Project</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="onboarding-card text-center">
            <h1 class="mb-3">Welcome to FoundationWebApp 🌍</h1>
            <p class="lead mb-4">
                Join us in making a difference. <br />
                Our foundation is dedicated to providing relief and support to disaster-affected communities.
            </p>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-light btn-cta shadow-sm">
                Sign In / Register
            </a>
        </div>
    </div>
}

<style>
    .services-wrapper {
        padding: 0 1rem;
    }

    .services-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
        width: 100%;
    }

    .service-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        padding: 2rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .service-card h3 {
            margin-bottom: 0.5rem;
            font-size: 1.3rem;
            color: #333;
        }

        .service-card p {
            font-size: 0.95rem;
            color: #555;
            margin-bottom: 1.5rem;
            flex-grow: 1;
        }

        .service-card .btn {
            border-radius: 6px;
            padding: 0.6rem 1.2rem;
        }


</style>
